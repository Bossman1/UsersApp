<Window x:Class="UsersApp.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersApp"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Users app" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid Background="#87CEFA">
        <Border  Margin="15,15,15,15" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="30" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
                <ListView x:Name="DisplayUsers" Margin="20">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="150"
                            DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Login" Width="150"
                            DisplayMemberBinding="{Binding Login}" />
                            <GridViewColumn Header="Email" Width="250"
                            DisplayMemberBinding="{Binding Email}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Window>
