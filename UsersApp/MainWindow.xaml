<Window x:Class="UsersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Users app" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid Background="#87CEFA">
        <Border MinWidth="400" MaxWidth="550" Margin="15,15,15,15" Background="White" VerticalAlignment="Center" Padding="30" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                 
                
                <TextBlock Text="User Login / Registration" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
                <Grid  Margin="0,0,0,20">
                    <Button HorizontalAlignment="Left" Foreground="White"  Click="Open_Login_Window" Content="Log in" Style="{ StaticResource MaterialDesignRaisedLightButton }"  />
                </Grid>

                <TextBox x:Name="TextBoxUsername" materialDesign:HintAssist.Hint="Enter username" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />
                <TextBox x:Name="TextBoxEmail" materialDesign:HintAssist.Hint="Enter email" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />
                <PasswordBox x:Name="TextBoxPassword" materialDesign:HintAssist.Hint="Enter password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"  />
                <PasswordBox x:Name="TextBoxPasswordAgain" materialDesign:HintAssist.Hint="Enter password again" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"  />

                <Button Click="Registration_Button" x:Name="RegBtn" Style="{StaticResource MaterialDesignRaisedLightButton}" Foreground="White" Content="User Registration" Margin="20 40 20 20" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
